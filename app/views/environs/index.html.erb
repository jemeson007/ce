<h1> Cleanliness List  </h1>
<p class="navbar-text pull-left">
<%= link_to 'Home', welcome_index_path %>  <br>
<%= link_to 'Add Endeavour', new_environ_path %>
</p>

<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>Place</th>
    <th>Subscription Order</th>
    <th>Price Point</th>
    <th colspan = "3"></th>
  </tr>

  <%= @environs.each do |environ| %>
    <tr>
    
      <td><%= environ.name %></td>
      <td><%= environ.place %></td>
      <td><%= environ.subscription %></td>
      <%= environ.spend = environ.amount * 1.21212 %>
      <td><%= environ.currency %><%= environ.spend.round(2)%></td>
      <td><%= link_to 'Show', environ_path(environ) %></td>
        <td><%= link_to "Procure", "https://www.paystack.com/pay/cleanup", :target => "_blank" %></td>  
      
      <% if environ.being == current_being %>
        
      	<td><%= link_to 'Edit', edit_environ_path(environ) %></td>
        <td><%= link_to 'Take Off the Environ', environ_path(environ), method: :delete, data: {confirm: 'Are you Certain?'} %></td>
      	
      <% end %>
      
    </tr>
  <% end %>

 
</table>
